# ── AWS Bedrock ───────────────────────────────────────────────────────────────
AWS_DEFAULT_REGION=us-east-1
# If not using ~/.aws credentials, set these:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# ── Neo4j Aura  (Phase 2) ─────────────────────────────────────────────────────
NEO4J_URI=neo4j+s://<your-aura-id>.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=<your-aura-password>

# ── MiniMax  (Phase 3) ────────────────────────────────────────────────────────
MINIMAX_API_KEY=
MINIMAX_GROUP_ID=

# ── GitHub  (Phase 3) ────────────────────────────────────────────────────────
GITHUB_TOKEN=
GITHUB_REPO=your-org/waste-hunter-demo    # repo with dummy infra files

# ── CopilotKit  (Phase 4) ─────────────────────────────────────────────────────
COPILOTKIT_API_KEY=

# ── Datadog  (optional — replace mocks in production) ────────────────────────
# DATADOG_API_KEY=
# DATADOG_APP_KEY=
# DATADOG_SITE=datadoghq.com
